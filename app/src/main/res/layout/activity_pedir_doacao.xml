<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4A8A8"
    tools:context=".pedirdoacao">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora de Doar"
            android:gravity="center"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#FF3C3C"
            android:background="@color/black"
            tools:ignore="HardcodedText,SpUsage" />


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="350dp"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:src="@drawable/setavoltar"
            android:background="@drawable/stroke"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </RelativeLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icone"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        tools:ignore="ExtraText">
        <TextView
            android:layout_width="400dp"
            android:layout_height="450dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:background="@color/white"/>
        />

        <EditText
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/stroke"
            android:backgroundTint="#EFECEC"
            android:gravity="center"
            android:hint="  Nome"
            android:lineBreakWordStyle="none"
            android:textStyle="bold"
            tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck,UnusedAttribute" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/stroke"
            android:backgroundTint="#EFECEC"
            android:gravity="center"
            android:hint=" Hospital"
            android:lineBreakWordStyle="none"
            android:textStyle="bold"
            tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck,UnusedAttribute" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/stroke"
            android:backgroundTint="#EFECEC"
            android:gravity="center"
            android:hint=" Setor internação"
            android:lineBreakWordStyle="none"
            android:textStyle="bold"
            tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck,UnusedAttribute" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/stroke"
            android:backgroundTint="#EFECEC"
            android:gravity="center"
            android:hint="Idade"
            android:lineBreakWordStyle="none"
            android:textStyle="bold"
            tools:ignore="Autofill,HardcodedText,TextFields,TouchTargetSizeCheck,UnusedAttribute,TextContrastCheck" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="201dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/stroke"
            android:backgroundTint="#EFECEC"
            android:gravity="center"
            android:hint="Tipo Sanguineo"
            android:textStyle="bold"
            tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,TouchTargetSizeCheck" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/stroke"
            android:backgroundTint="#EFECEC"
            android:gravity="center"
            android:hint="Pedir Doação!"
            android:maxLines="7"
            tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields" />

        <Button
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#E3402A"
            android:text="Vamos Doar!"
            tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck,VisualLintButtonSize" />
    </RelativeLayout>

</LinearLayout>