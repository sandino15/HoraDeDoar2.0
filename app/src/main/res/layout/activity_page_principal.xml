<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/laranja"
    android:orientation="vertical"
    tools:context=".Menu">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:background="@color/laranja"
        android:gravity="center"
        android:text="Hora de Doar"
        android:textColor="@color/white"
        android:textSize="39sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="370dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="src_over"
        app:srcCompat="@drawable/setavoltar"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/icone"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/stroke"
        android:padding="@dimen/cardview_default_radius"
        android:gravity="center"
        android:text="Quais são os requisitos para doa o de sangue ? podem doar sangue pessoas entre 16 e 69 anos e que estejam pesando mais de 50kg além disso é preciso apresentar documento oficial com foto e menores de 18 anos so podem doar com consentimento formal dos responsaveis"
        android:textStyle="bold"
        tools:ignore="Autofill,LabelFor,TextFields,VisualLintLongText,VisualLintTextFieldSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id = "@+id/relativelayout"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="20dp"
        >


        <Button
            android:id="@+id/Alteracadastro"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:onClick="botaoAlterarCadastro"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="Alterar Cadastro"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/pedirdoacao"

            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mensagens"
            android:onClick="BotaoMensagens"
            android:paddingHorizontal="30dp"
            android:layout_marginStart="260dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white" />


        <Button
            android:id = "@+id/mensagens"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="BotaopedirDoacao"
            android:text="Pedir Doação"
            android:layout_marginStart="130dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />


    </RelativeLayout>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:contentDescription="Todo"
        android:src="@drawable/icone"
        tools:ignore="ImageContrastCheck" />
    <Button

        android:id="@+id/BotaoRedes1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#E3402A"
        android:onClick="botaoredes"
        android:text="Local das redes credenciadas"
        tools:ignore="LabelFor,TextFields,VisualLintTextFieldSize" />


</LinearLayout>